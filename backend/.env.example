# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:19006

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sha_pay_db
DB_USER=sha_pay_user
DB_PASSWORD=your_secure_password
DB_DIALECT=postgres

# Alternative Database URLs (choose one)
# DATABASE_URL=postgresql://username:password@localhost:5432/sha_pay_db
# DATABASE_URL=mysql://username:password@localhost:3306/sha_pay_db
# DATABASE_URL=sqlite://./database.sqlite

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_here_make_it_very_long_and_random
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@shapay.com

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Payment Gateway Configuration
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Paystack (for African markets)
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:19006

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Notification Configuration
PUSH_NOTIFICATION_KEY=your_push_notification_key
FCM_SERVER_KEY=your_fcm_server_key

# Development Configuration
DEBUG=true
VERBOSE_LOGGING=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# VERBOSE_LOGGING=false
# HTTPS_ONLY=true
# SECURE_COOKIES=true

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
MONITORING_ENABLED=false
MONITORING_ENDPOINT=https://your-monitoring-service.com/webhook

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,http://localhost:3000,http://localhost:8081
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Database Pool Configuration
DB_POOL_MIN=0
DB_POOL_MAX=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Timezone Configuration
TIMEZONE=UTC

# Feature Flags
FEATURE_REAL_TIME_NOTIFICATIONS=true
FEATURE_PAYMENT_PROCESSING=true
FEATURE_FILE_UPLOAD=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_TWO_FACTOR_AUTH=false

# Third-party Service URLs
GEOCODING_API_URL=https://api.mapbox.com/geocoding/v5
GEOCODING_API_KEY=your_mapbox_api_key

# SMS Configuration (optional)
SMS_SERVICE=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890