{
  "name": "sha-pay-backend",
  "version": "1.0.0",
  "description": "Backend API for Sha Pay - Service Provider and Requester Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:test": "NODE_ENV=test npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:test": "NODE_ENV=test npx sequelize-cli db:seed:all",
    "build": "npm install --production",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "docker:build": "docker build -t sha-pay-backend .",
    "docker:run": "docker run -p 3000:3000 sha-pay-backend",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "health-check": "node healthcheck.js",
    "prod:start": "NODE_ENV=production node server.js",
    "prod:test": "NODE_ENV=production node scripts/test-database-connection.js",
    "prod:backup": "node scripts/backup-strategy.js",
    "prod:migrate": "NODE_ENV=production node scripts/setup-cloud-database.js",
    "prod:deploy-check": "npm run prod:test && npm run health-check",
    "prod:readiness": "node scripts/production-readiness-check.js"
  },
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "firebase-admin": "^13.4.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "multer-storage-cloudinary": "^4.0.0",
    "mysql2": "^3.14.3",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.10",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.3",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.7",
    "stripe": "^14.25.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "api",
    "backend",
    "express",
    "nodejs",
    "payment",
    "service-platform",
    "mobile-app"
  ],
  "author": "Sha Pay Team",
  "license": "MIT"
}
