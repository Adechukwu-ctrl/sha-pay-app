{
  "name": "sha-pay-app",
  "version": "1.0.0",
  "description": "A mobile payment app connecting service providers and requesters",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:dev": "cross-env NODE_ENV=development expo export --platform web",
    "build:staging": "cross-env NODE_ENV=preview expo export --platform web",
    "build:prod": "cross-env NODE_ENV=production expo export --platform web",
    "build:android:dev": "cross-env NODE_ENV=development eas build --platform android --profile development",
    "build:android:staging": "cross-env NODE_ENV=preview eas build --platform android --profile preview",
    "build:android:prod": "cross-env NODE_ENV=production eas build --platform android --profile production",
    "build:ios:dev": "cross-env NODE_ENV=development eas build --platform ios --profile development",
    "build:ios:staging": "cross-env NODE_ENV=preview eas build --platform ios --profile preview",
    "build:ios:prod": "cross-env NODE_ENV=production eas build --platform ios --profile production",
    "deploy:web:dev": "npm run build:dev && npx serve dist",
    "deploy:web:staging": "npm run build:staging && npx serve dist",
    "deploy:web:prod": "npm run build:prod && npx serve dist",
    "env:check": "node -e \"console.log('Environment:', process.env.NODE_ENV || 'development'); console.log('API URL:', process.env.EXPO_PUBLIC_API_BASE_URL);\""
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.1.0",
    "@expo/webpack-config": "^18.0.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/datetimepicker": "8.4.1",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/native-stack": "^6.9.13",
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.4.0",
    "babel-preset-expo": "~13.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "expo": "^53.0.20",
    "expo-build-properties": "~0.14.8",
    "expo-dev-client": "~5.2.4",
    "expo-image-picker": "~16.1.4",
    "expo-status-bar": "~2.2.3",
    "express": "^5.1.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-paper": "^5.9.1",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "^0.20.0",
    "react-redux": "^8.1.1",
    "semver": "^7.7.2",
    "socket.io-client": "^4.7.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-syntax-decimal": "^7.24.7",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-native": "^5.4.2",
    "@testing-library/react-native": "^12.1.2",
    "@types/react": "~18.2.14",
    "babel-jest": "^30.0.5",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "jest-expo": "~49.0.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.1.3"
  },
  "private": true
}
